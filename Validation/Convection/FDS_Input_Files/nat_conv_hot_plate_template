&HEAD CHID='nat_conv_hot_plate_Case_Cells', TITLE='Natural convection from downward facing hot plate' /

&MULT DX=Side, DY=Side, I_UPPER=3, J_UPPER=1 ID='m1' /
&MESH IJK=Cells,Cells,Cells, XB=-Side,0.0,-Side,0.0,0.0,Side, MULT_ID='m1' /

&TIME T_END=Time /

&DUMP DT_DEVC=1. /

&MISC STRATIFICATION=F /

&RADI RADIATION=F /

&SPEC ID='LJ AIR', SPECIFIC_HEAT=1., CONDUCTIVITY=0.018216, VISCOSITY=1.8216E-5, BACKGROUND=.TRUE./ ! Pr=1.00

&OBST XB=X1,X2,Y1,Y2,Z1,Z2, SURF_IDS='WALL','WALL','HOT' /
&OBST XB=X3,X4,Y1,Y2,Z1,Z2, SURF_IDS='HOT','WALL','WALL' /

&SURF ID='WALL', ADIABATIC=T, DEFAULT=T /
&SURF ID='HOT', COLOR='RED', TMP_FRONT=Temp, CONVECTION_LENGTH_SCALE=Conv /

&VENT MB='XMIN', SURF_ID='OPEN' /
&VENT MB='XMAX', SURF_ID='OPEN' /
&VENT MB='YMIN', SURF_ID='OPEN' /
&VENT MB='YMAX', SURF_ID='OPEN' /
&VENT MB='ZMIN', SURF_ID='OPEN' /
&VENT MB='ZMAX', SURF_ID='OPEN' /

&BNDF QUANTITY='HEAT TRANSFER COEFFICIENT', CELL_CENTERED=T/
&BNDF QUANTITY='CONVECTIVE HEAT FLUX', CELL_CENTERED=T/
&BNDF QUANTITY='THERMAL WALL UNITS', CELL_CENTERED=T /
&BNDF QUANTITY='VISCOUS WALL UNITS', CELL_CENTERED=T /

&SLCF PBY=0.001, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /

&DEVC ID='qdot1', QUANTITY='CONVECTIVE HEAT FLUX', XB=X1,X2,Y1,Y2,0.0,Side, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /
&DEVC ID='qdot2', QUANTITY='CONVECTIVE HEAT FLUX', XB=X3,X4,Y1,Y2,0.0,Side, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /

&TAIL /
